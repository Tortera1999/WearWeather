<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#29B6f6"
    android:orientation="vertical"


    tools:context="boilermake.wearweather.ClothingSuggestions">

    <TextView
        android:id="@+id/Descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="13dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:text="@string/description"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coatImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="99dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/blackwhiteboot" />

        <ImageView
            android:id="@+id/shirtImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/blackwhiteboot" />


        <ImageView
            android:id="@+id/pantImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/blackwhiteboot" />

        <ImageView
            android:id="@+id/shoeImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/blackwhiteboot" />
    </LinearLayout>
</RelativeLayout>
